<%- include('partials/header', { pageTitle: 'Manage Projects', user }) %>

<div class="container mt-5">
    <h1 class="text-primary">Manage Projects</h1>
    <a href="/projects/add" class="btn btn-success mb-3">Add Project</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% projects.forEach(project => { %>
                <tr>
                    <td><%= project.id %></td>
                    <td><%= project.name %></td>
                    <td>
                        <a href="/projects/edit/<%= project.id %>" class="btn btn-info btn-sm">Edit</a>
                        <a href="/projects/delete/<%= project.id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>
