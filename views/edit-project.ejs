<%- include('partials/header', { pageTitle: 'Edit Project', user }) %>

<div class="container mt-5">
    <h1 class="text-primary">Edit Project</h1>
    <form action="/projects/edit/<%= project.id %>" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Project Name</label>
            <input type="text" id="name" name="name" class="form-control" value="<%= project.name %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
    <a href="/projects" class="btn btn-secondary mt-3">Back to Projects</a>
</div>

<%- include('partials/footer') %>
