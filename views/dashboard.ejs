<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Dashboard</title>
    <style>
        /* Additional styles for the chart */
        #tasksChart {
            max-width: 300px; /* Reduce the chart size */
            margin: 0 auto;   /* Center the chart */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Welcome Message -->
        <h1 class="text-center text-primary">Welcome, <%= username %>!</h1>

        <!-- Dashboard Header -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <h2 class="text-secondary">Dashboard</h2>
            <div>
                <a href="/tasks" class="btn btn-secondary">Manage Tasks</a>
                <a href="/logout" class="btn btn-danger">Logout</a>
            </div>
        </div>

        <!-- Chart -->
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 text-center">
                <canvas id="tasksChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        const projectStatusCounts = <%- JSON.stringify(projectStatusCounts) %>;

        // Prepare data for Chart.js
        const labels = projectStatusCounts.map(p => p.projectName);
        const pendingData = projectStatusCounts.map(p => p.Pending);
        const inProgressData = projectStatusCounts.map(p => p.InProgress);
        const completedData = projectStatusCounts.map(p => p.Completed);

        const ctx = document.getElementById('tasksChart').getContext('2d');
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Pending',
                        data: pendingData,
                        backgroundColor: 'rgba(255, 99, 132, 0.5)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1,
                    },
                    {
                        label: 'In Progress',
                        data: inProgressData,
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1,
                    },
                    {
                        label: 'Completed',
                        data: completedData,
                        backgroundColor: 'rgba(75, 192, 192, 0.5)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1,
                    },
                ],
            },
            options: {
                responsive: true, // Make the chart responsive
                plugins: {
                    legend: {
                        position: 'top', // Move legend to the top
                    },
                },
                maintainAspectRatio: false, // Allow dynamic resizing
            },
        });
    </script>
</body>
</html>
